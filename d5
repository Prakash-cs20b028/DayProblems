int mod = 1e9+7;
	int TotalWays(int N)
	{
	    long long first = 1,num1,num2,num3;
	    long long second = 2;
	    if(N==1)
	    {
	        return 4;
	    }
	    for(int i=2;i<=N;i++)
	    {
	        num1 = (first%mod + second%mod)%mod;
	        first = second;
	        second = num1;
	        
	    }
	    return (second%mod * second%mod);
	} 
